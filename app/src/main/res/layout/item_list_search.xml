<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_filme"
    style="@style/ItemLayout">

    <ImageView
        android:id="@+id/img_item"
        style="@style/ItemImage"
        android:contentDescription="@string/desc_imagem_filme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_item"
        style="@style/ItemTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_item"
        app:layout_constraintRight_toLeftOf="@id/img_action"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_action"
        style="@style/ItemAction"
        android:contentDescription="@string/desc_action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        style="@style/DividerThin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/txt_item"/>

</android.support.constraint.ConstraintLayout>